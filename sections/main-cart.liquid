    cartItems: `{{ cart.items | json | replace: '"', "'" }}`,
    cartTotalPrice: `{{ cart.total_price }}`,
    currency: `{{ 'shoppingBag.currency' | t }}`,
    leftSideTitle: `{{ 'shoppingBag.leftSideTitle' | t }}`,
    leftSideTableProduct: `{{ 'shoppingBag.leftSideTableProduct' | t }}`,
    leftSideTablePrice: `{{ 'shoppingBag.leftSideTablePrice' | t }}`,
    leftSideTableQuantity: `{{ 'shoppingBag.leftSideTableQuantity' | t }}`,
    leftSideTableSybtotal: `{{ 'shoppingBag.leftSideTableSybtotal' | t }}`,
    rightSideTitle: `{{ 'shoppingBag.rightSideTitle' | t }}`,
    rightSideSize: `{{ 'shoppingBag.rightSideSize' | t }}`,
    rightSideQuantity: `{{ 'shoppingBag.rightSideQuantity' | t }}`,
    rightSideSubtotal: `{{ 'shoppingBag.rightSideSubtotal' | t }}`,
    rightSideShipping: `{{ 'shoppingBag.rightSideShipping' | t }}`,
    rightSideShippingCost: `{{ 'shoppingBag.rightSideShippingCost' | t }}`,
    rightSideTotal: `{{ 'shoppingBag.rightSideTotal' | t }}`,
    rightSideCheckout: `{{ 'shoppingBag.rightSideCheckout' | t }}`,
    delivery: `{{ 'shoppingBag.delivery' | t }}`,
    emptyShoppingBag: `{{ 'shoppingBag.emptyShoppingBag' | t }}`,
    emptyShoppingBagButton: `{{ 'shoppingBag.emptyShoppingBagButton' | t }}`,
    collectionUrl: `{{ settings.collectionUrl }}`,
  }"
>
</cart-shopping-bag>
